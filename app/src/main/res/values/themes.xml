<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodlyApplication" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/MainColor</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.StatusGrayColor" parent="Theme.FoodlyApplication">
        <item name="android:statusBarColor">@color/Background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.StatusMainColor" parent="Theme.FoodlyApplication">
        <item name="android:statusBarColor">@color/MainColor</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>