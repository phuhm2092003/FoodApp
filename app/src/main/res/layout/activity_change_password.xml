<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Background"
    tools:context=".ChangePasswordActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="100dp">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/back_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/title"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginTop="59dp"
                android:fontFamily="@font/red_hat_display_bold"
                android:text="Update Your Password"
                android:textColor="@color/MainBlack"
                android:textSize="38sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/backBtn" />

            <LinearLayout
                android:id="@+id/linerlayoutFormSignIn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="35dp"
                android:layout_marginTop="37dp"
                android:layout_marginEnd="35dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/passwordOldEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_radius15_white"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="20dp"
                        android:ems="10"
                        android:fontFamily="@font/red_hat_display_medium"
                        android:hint="Old Password"
                        android:inputType="textPassword"
                        android:paddingVertical="21dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="59dp"
                        android:textColorHint="@color/Gray2"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/passwordOldToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="27dp"
                        android:src="@drawable/ic_password_hide"
                        app:layout_constraintBottom_toBottomOf="@id/passwordOldEdt"
                        app:layout_constraintEnd_toEndOf="@id/passwordOldEdt"
                        app:layout_constraintTop_toTopOf="@id/passwordOldEdt" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPassword1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/passwordNewEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_radius15_white"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="20dp"
                        android:ems="10"
                        android:fontFamily="@font/red_hat_display_medium"
                        android:hint="New Password"
                        android:inputType="textPassword"
                        android:paddingVertical="21dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="59dp"
                        android:textColorHint="@color/Gray2"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/passwordNewToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="27dp"
                        android:src="@drawable/ic_password_hide"
                        app:layout_constraintBottom_toBottomOf="@id/passwordNewEdt"
                        app:layout_constraintEnd_toEndOf="@id/passwordNewEdt"
                        app:layout_constraintTop_toTopOf="@id/passwordNewEdt" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPasswordRetype"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/passwordNewReplaceEdt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_radius15_white"
                        android:drawableStart="@drawable/ic_lock"
                        android:drawablePadding="20dp"
                        android:ems="10"
                        android:fontFamily="@font/red_hat_display_medium"
                        android:hint="Replace New Password"
                        android:inputType="textPassword"
                        android:paddingVertical="21dp"
                        android:paddingStart="18dp"
                        android:paddingEnd="59dp"
                        android:textColorHint="@color/Gray2"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/passwordNewReplaceToggle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="27dp"
                        android:src="@drawable/ic_password_hide"
                        app:layout_constraintBottom_toBottomOf="@id/passwordNewReplaceEdt"
                        app:layout_constraintEnd_toEndOf="@id/passwordNewReplaceEdt"
                        app:layout_constraintTop_toTopOf="@id/passwordNewReplaceEdt" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/updateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginTop="22dp"
                    android:background="@drawable/shape_radius15_main_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/shape_radius15_main_color"
                        android:fontFamily="@font/red_hat_display_semibold"
                        android:letterSpacing="0.02"
                        android:text="UPDATE"
                        android:textColor="@color/White"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/updateLaterBtn"
                    android:layout_width="match_parent"
                    android:layout_height="66dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/shape_radius15_secondary_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/red_hat_display_semibold"
                        android:letterSpacing="0.02"
                        android:text="LATER"
                        android:textColor="@color/MainColor"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>